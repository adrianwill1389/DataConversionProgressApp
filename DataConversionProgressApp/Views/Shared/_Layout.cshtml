<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DataConversionProgressApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DataConversionProgressApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

</head>

<body>

    @if (TempData["NewAnnouncement"] != null)
    {
        <div class="announcement-banner">
            <strong>📢 Announcement:</strong> @TempData["NewAnnouncement"]
            <a href="/Announcement/Index" class="btn btn-sm btn-outline-dark ms-2">View</a>
        </div>
    }




    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DataConversionProgressApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "") text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Court" ? "active" : "") text-dark" asp-controller="Court" asp-action="Index">Update Progress</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Announcement" asp-action="Index">Announcements</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Report/MyReport">My Report</a>
                        </li>



                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Privacy" ? "active" : "") text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                    </ul>
                </div>
            </div>
            
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
            @{
                var username = Context.Session.GetString("Username");
            }

            @if (!string.IsNullOrEmpty(username))
            {
                <div class="d-flex justify-content-end align-items-center pe-4">
                    <span class="navbar-text fw-semibold text-primary me-3">
                        Hello, @username
                    </span>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="mb-0">
                        <button type="submit" class="btn btn-outline-primary btn-sm">Logout</button>
                    </form>
                </div>
            }

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - DataConversionProgressApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</body>
</html>
