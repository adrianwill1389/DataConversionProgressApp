@model List<DataConversionProgressApp.Models.Announcement>

<h2>Team Announcements</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="PostAnnouncement" method="post">
    <div class="mb-3">
        <textarea name="message" class="form-control" rows="3" placeholder="Type your announcement..."></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Post</button>
</form>

<hr />

@foreach (var announcement in Model)
{
    <div class="card mb-3">
        <div class="card-header bg-light">
            <strong>@announcement.Username</strong>
            <span class="text-muted float-end">@announcement.Timestamp.ToString("MMM d, yyyy h:mm tt")</span>
        </div>
        <div class="card-body">
            <p class="card-text">@announcement.Message</p>

            @if (announcement.Username?.ToLower() == Context.Session.GetString("Username")?.ToLower())
            {
                <form asp-action="Delete" asp-controller="Announcement" method="post" class="mt-2">
                    <input type="hidden" name="id" value="@announcement.Id" />
                    <button type="submit" class="btn btn-sm btn-outline-danger"
                            onclick="return confirm('Are you sure you want to delete this announcement?');">
                        Delete
                    </button>

                </form>
            }
        </div>
    </div>
}


