@{
    ViewData["Title"] = "Home";
    var months = ViewBag.Months as List<string>;
}

<div class="text-center">
    <h2 class="text-primary mb-4">Data Conversion Progress</h2>

    <div class="row justify-content-center">
        @for (int i = 0; i < months.Count; i++)
        {
            <div class="col-md-3 mb-3">
                <div class="card bg-light shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@months[i]</h5>
                       <a href="/Court/Index?month=@(i + 1)" class="btn btn-outline-primary btn-sm"
   title="See all tasks for @months[i]">
   <i class="bi bi-eye"></i> View Progress
</a>


                    </div>
                </div>
            </div>
        }
    </div>
    <!-- 🎉 Add your portrait photo here -->
    <div class="awareness-banner text-center mb-3">
        <img src="~/images/october-ribbon.jpg" alt="Breast Cancer Awareness" class="map-image" />
        <p class="awareness-caption">Honoring strength with subtle beauty</p>
    </div>

</div>
