@{
    ViewData["Title"] = "Home";
    var months = ViewBag.Months as List<string>;
}

<div class="text-center">
    
    <div class="progress-pulse-banner text-center mb-4">
        <p>📊 Tracking data conversion progress — stay focused!</p>
    </div>

    <div class="row justify-content-center">
        @for (int i = 0; i < months.Count; i++)
        {
            <div class="col-md-3 mb-3">
                <div class="card bg-light shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@months[i]</h5>
                       <a href="/Court/Index?month=@(i + 1)" class="btn btn-outline-primary btn-sm"
   title="See all tasks for @months[i]">
   <i class="bi bi-eye"></i> View Progress
</a>


                    </div>
                </div>
            </div>
        }
    </div>
    <!-- 📊 Dashboard Section with Blue Background -->
    <!-- Blue Dashboard Section -->
    <div class="dashboard-section">
        <div class="text-center">
            <img src="~/images/dashboard.jpg" alt="Months Tracking Dashboard" class="dashboard-image" />
            <p class="dashboard-caption">Visualizing progress and movement. 🇯🇲</p>
        </div>
    </div>

</div>
