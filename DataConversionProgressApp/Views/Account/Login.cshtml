@model DataConversionProgressApp.Models.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #0d6efd;
            color: white;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-box {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            width: 100%;
            max-width: 400px;
            color: black;
        }
    </style>
</head>


<body>
    <div class="container">
        <!-- 🔹 BANNER SECTION -->
        <div class="bg-primary text-white text-center py-4 shadow-sm mb-5 rounded">
            <h1 class="m-0">Data Conversion Progress Application</h1>
            <p class="text-white-50 mt-2">Login to update your data</p>
        </div>

        <!-- 🔹 LOGIN FORM BOX -->
        <div class="login-box shadow p-4 bg-white rounded mx-auto" style="max-width: 400px;">
            <h3 class="text-center text-primary mb-4">User Login</h3>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success text-center">
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger text-center">
                    @Html.ValidationSummary(false)
                </div>
            }


            <form method="post" asp-action="Login">
                <div class="mb-3">
                    <label>Username</label>
                    <input asp-for="Username" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label>Password</label>
                    <input asp-for="Password" type="password" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>

            <p class="mt-3 text-center">
                No account? <a asp-action="Register" class="text-decoration-none text-primary">Register</a>
            </p>
        </div>
    </div>
</body>
</html>
