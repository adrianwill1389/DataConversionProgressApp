                                            <text x="50%" y="50%" text-anchor="middle" dy=".3em" fill="#ffffff"
                                                  font-size="11" font-family="Arial">
                                                @(Model[i].Court2WarrantBy.Substring(0, 1).ToUpper())
                                            </text>
