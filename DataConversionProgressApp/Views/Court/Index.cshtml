@model List<DataConversionProgressApp.Models.CourtProgress>

@{
    ViewData["Title"] = "Court Progress Table";
}

<h2>Court Tracking Table</h2>

<table class="table table-bordered table-dark">
    <thead>
        <tr>
            <th>Day Court Received / Collected</th>
            <th>Court 1 Disposed</th>
            <th>Court 1 Warrant</th>
            <th>Court 2 CaseManagement</th>
            <th>Court 2 Warrant</th>
            <th>Progress</th>
            <th>Status</th>
            <th>Selected By</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DateReceived.ToString("dddd, MMM d, yyyy")</td>
                <td><input type="checkbox" checked="@item.Court1Disposed" disabled /></td>
                <td><input type="checkbox" checked="@item.Court1Warrant" disabled /></td>
                <td><input type="checkbox" checked="@item.Court2Disposed" disabled /></td>
                <td><input type="checkbox" checked="@item.Court2Warrant" disabled /></td>
                <td>@item.Progress %</td>
                <td>@item.Status</td>
                <td>@item.User</td>
            </tr>
        }
    </tbody>
</table>
